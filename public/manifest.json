{
  "manifest_version": 2,

  "name": "Atmosphere",
  "description": "Broadcasting the brand of you.",
  "version": "0.9.1",
  "icons": {
    "128": "chrome-icon-lg.png"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "bookmarks",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Syndicate article"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "index.html"
  ]
}
